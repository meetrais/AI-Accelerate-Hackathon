{
  "name": "flight-booking-assistant",
  "version": "1.0.0",
  "description": "AI-Powered Flight Booking Assistant using Vertex AI and Elasticsearch",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed-flights": "ts-node src/scripts/seedFlights.ts",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:bash": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "setup-secrets": "powershell -ExecutionPolicy Bypass -File scripts/setup-secrets-simple.ps1",
    "setup-secrets:bash": "chmod +x scripts/setup-secrets.sh && ./scripts/setup-secrets.sh",
    "docker:build": "docker build -t flight-booking-assistant .",
    "docker:run": "docker run -p 8080:8080 flight-booking-assistant"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/vertexai": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "flight",
    "booking",
    "ai",
    "vertex-ai",
    "elasticsearch",
    "hackathon"
  ],
  "author": "Flight Booking Team",
  "license": "MIT"
}
